package Spring.MongoSpring;
import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.List;
import java.util.Set;

public class GofroDataToCollection implements CsvToCollection {

	private BufferedReader br;
	
	private boolean getReader(String filepath)
	{
		try {
			br = new BufferedReader(new FileReader(filepath));
			return true;
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			return false;
		}
	}
	
	private boolean closeWriter()
	{
		try
		{
			br.close();
			return true;
		}
		catch(Exception e){
			return false;
		}
	}
	
	public List<Country> createCountryList(String filepath) {
		
		List<Country> countryList = new ArrayList<Country>();
		if(getReader(filepath))
		{
			return countryList;
		}
		else
		{
			System.out.println(filepath + "file missing");
			return null;
		}
		
		
	}

	public Set<State> createStatesList(String filepath) {
		
		
		return null;
	}

	public List<City> createCityList(String filepath) {
		
		
		return null;
	}
	
	

}
